<%= page_title("#{i18n_word(:view)} #{i18n_model(:participant)}") %>

<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= output_tag :person, @participant, @participant.person %>
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <%= output_tag :frequence, @participant, @participant.frequence %>
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <%= output_tag :type_participation, @participant, @participant.type_participation %>
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <%= output_tag :event, @participant, @participant.event %>
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <%= output_tag :status, @participant, @participant.status %>
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <%= output_tag :workload, @participant, @participant.workload %>
    </div>
  </div>
</div>

<div class="float-right">
  <%= link_to "<span><i class='fa fa-arrow-left mr-1'></i>#{i18n_word(:come_back)}</span>".html_safe, :back,
              class: 'btn btn-secondary btn-icon btn-1 btn-simple' %>
  <%= link_to "<span><i class='fa fa-edit mr-1'></i>#{i18n_word(:edit)}</span>".html_safe, edit_participant_path(@participant),
              class: 'btn btn-primary btn-icon btn-1 btn-simple' %>
</div>