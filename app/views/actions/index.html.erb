<p id="notice"><%= notice %></p>

<h1>Actions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Key</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actions.each do |action| %>
      <tr>
        <td><%= action.name %></td>
        <td><%= action.description %></td>
        <td><%= action.key %></td>
        <td><%= link_to 'Show', action %></td>
        <td><%= link_to 'Edit', edit_action_path(action) %></td>
        <td><%= link_to 'Destroy', action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

