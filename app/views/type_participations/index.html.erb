<div class="float-left">
  <%= page_title(i18n_model(:type_participation, plural: true)) %>
</div>
<div class="float-right pt-2">
  <%= icon_link i18n_word(:register), 'plus', new_type_participation_path %>
</div>

<table class="table">
  <thead>
    <tr class="bg-primary">
      <th class="text-white bold"><%= i18n_model(:type_participation, :name) %></th>
      <th style="width: 1%;" class="text-white text-center bold" colspan="3"><%= i18n_word(:actions) %></th>
    </tr>
  </thead>

  <tbody>
    <% @type_participations.each do |type_participation| %>
    <tr>
      <td><%= type_participation.name %></td>
      <td class="text-center">
        <%= link_to '<span><i class="fa fa-search"></i></span>'.html_safe, type_participation,
                    class: 'btn btn-primary btn-icon btn-sm btn-simple'%>
        <%= link_to '<span><i class="fa fa-edit"></i></span>'.html_safe, edit_type_participation_path(type_participation),
                    class: 'btn btn-icon btn-sm btn-warning' %>
        <%= link_to '<span><i class="fa fa-trash"></i></span>'.html_safe, type_participation,
                    method: :delete, data: { confirm: 'VocÃª tem certeza?' },
                    class: 'btn btn-icon btn-sm btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="row justify-content-center">
  <%= paginate @type_participations %>
</div>
