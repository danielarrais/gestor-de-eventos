<%= page_title("#{i18n_word(:view)} #{i18n_model(:type_participation)}") %>

<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= output_tag :name, @type_participation, @type_participation.name %>
    </div>
  </div>
</div>

<div class="float-right">
  <%= link_to "<span><i class='fa fa-arrow-left mr-1'></i>#{i18n_word(:come_back)}</span>".html_safe, :back,
              class: 'btn btn-secondary btn-icon btn-1 btn-simple' %>
  <%= link_to "<span><i class='fa fa-edit mr-1'></i>#{i18n_word(:edit)}</span>".html_safe, edit_type_participation_path(@type_participation),
              class: 'btn btn-primary btn-icon btn-1 btn-simple' %>
</div>