<%= page_title('Visualizar Usuário') %>

<div class="row">
  <div class="col-md-3">
    <div class="form-group">
      <%= label_tag :name, 'Nome' %>
      <%= label_tag :name, @user.person.name, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <%= label_tag :surname, 'Sobrenome' %>
      <%= label_tag :surname, @user.person.surname, class: 'form-control' %>
    </div>
  </div>

  <div class="col-md-3">
    <div class="form-group">
      <%= label_tag :date_of_birth, 'Data de nascimento' %>
      <%= label_tag :date_of_birth, @user.person.date_of_birth.strftime('%d/%m/%Y'), class: 'form-control' %>
    </div>
  </div>

  <div class="col-md-2">
    <div class="form-group">
      <%= label_tag :registration, 'Matrícula' %>
      <%= label_tag :registration, @user.person.registration ||= '', class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-3">
    <div class="form-group">
      <%= label_tag :cpf, 'CPF' %>
      <%= label_tag :cpf, @user.person.cpf, class: 'form-control cpf-mask' %>
    </div>
  </div>
  <div class="col-md-5">
    <div class="form-group">
      <%= label_tag :email, 'Email' %>
      <%= label_tag :email, @user.email, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <%= label_tag :cellphone, 'Celular' %>
      <%= label_tag :cellphone, @user.person.cellphone ||= '', class: 'form-control' %>
    </div>
  </div>
</div>

<div class="float-right">
  <%= link_to span_icon(i18n_word(:come_back), 'arrow-left'), :back,
              class: 'btn btn-secondary btn-icon btn-1 btn-simple',
              data: { toggle: 'tooltip', placement: 'bottom' }, title: "Editar" %>
  <%= link_to span_icon(i18n_word(:edit), 'edit'), edit_user_path(@user),
              class: 'btn btn-primary btn-icon btn-1 btn-simple' %>
</div>
