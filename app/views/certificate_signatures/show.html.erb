<%= page_title('Visualizar Assinatura de Certificado') %>

<div class="row">
  <div class="col-md-5">
    <div class="form-group">
      <%= label_tag :name, 'Nome' %>
      <%= label_tag :name, @certificate_signature.name, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-7">
    <div class="form-group">
      <%= label_tag :role, 'Cargo' %>
      <%= label_tag :role, @certificate_signature.role, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label class="mb-2">Pré-visualização</label>
      <%= render 'certificate_signatures/components/preview', certificate_signature: @certificate_signature %>
    </div>
  </div>
</div>

<div class="float-right">
  <%= link_to '<span><i class="fa fa-arrow-left mr-1"></i>Voltar</span>'.html_safe, :back,
              class: 'btn btn-secondary btn-icon btn-1 btn-simple' %>
  <%= link_to '<span><i class="fa fa-edit mr-1"></i>Editar</span>'.html_safe, edit_certificate_signature_path(@certificate_signature),
              class: 'btn btn-primary btn-icon btn-1 btn-simple' %>
</div>
