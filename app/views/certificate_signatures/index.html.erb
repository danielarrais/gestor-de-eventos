<div class="float-left">
  <div class="ct-page-title">
    <h1 class="ct-title" id="content">Assinaturas de Certificado</h1>
  </div>
</div>
<div class="float-right pt-4">
  <%= link_to '<span><i class="fa fa-plus"></i> Cadastrar</span>'.html_safe, new_certificate_signature_path %>
</div>

<table class="table">
  <thead>
  <tr class="bg-primary">
    <th class="text-white bold">
      Nome
    </th>
    <th class="text-white bold">
      Descrição
    </th>
    <th class="text-white text-center bold">
      Ações
    </th>
  </tr>
  </thead>
  <tbody>
  <% @certificate_signatures.each do |certificate_signature| %>
    <tr>
      <td>
        <%= certificate_signature.name %>
      </td>
      <td>
        <%= certificate_signature.role %>
      </td>
      <td class="text-center">
        <%= link_to '<span><i class="fa fa-search"></i></span>'.html_safe, certificate_signature,
                    class: 'btn btn-primary btn-icon btn-sm btn-simple' %>
        <%= link_to '<span><i class="fa fa-edit"></i></span>'.html_safe, edit_certificate_signature_path(certificate_signature),
                    class: 'btn btn-icon btn-sm btn-warning' %>
        <%= link_to '<span><i class="fa fa-trash"></i></span>'.html_safe, certificate_signature,
                    method: :delete, data: {confirm: 'Are you sure?'},
                    class: 'btn btn-icon btn-sm btn-danger' %>
      </td>
    </tr>

  <% end %>
  </tbody>
</table>

<div class="row justify-content-center">
  <%= paginate @certificate_signatures %>
</div>